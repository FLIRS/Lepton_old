project Test is

   for Languages use ("C");
   for Source_Dirs use (".");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("all.c", "test_vsync.c", "grab.c", "render.c");
   
   package Builder is 
   end Builder;
   
   package Compiler is
      for Switches ("C") use 
      (
         "-Wno-missing-field-initializers",
         "-Wno-missing-braces", 
         "-Wno-error=unused-but-set-variable",
         "-std=gnu11", 
         "-fdiagnostics-color", 
         "-Wall", 
         "-Wextra", 
         "-Wpedantic", 
         --"-Wno-variadic-macros", --Does not help
         "-Wshadow", 
         "-Werror", 
         "-Wshadow", 
         "-march=native"
      );
   end Compiler;
   
   package Linker is
      for Switches ("test_vsync.c") use ("-lwiringPi");
      for Switches ("grab.c") use ("-lwiringPi");
      for Switches ("render.c") use ("´sdl2-config --cflags --libs´", "-lm", "-lSDL2_ttf", "-lSDL2_image");
   end Linker;
   
end Test;
